<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#3a3a3c">

    <ImageView
        android:id="@+id/tb_btn_search"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:tint="@color/tb_icon"
        android:src="@drawable/icon_search"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp" />

    <ImageView
        android:id="@+id/tb_btn_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:src="@drawable/wintec_logo_pure"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tb_btn_search"
        app:layout_constraintEnd_toStartOf="@id/tb_btn_profile" />

    <ImageView
        android:id="@+id/tb_btn_profile"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:tint="@color/tb_icon"
        android:src="@drawable/icon_profile"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="60dp" />

</android.support.constraint.ConstraintLayout>